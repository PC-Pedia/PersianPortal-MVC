@model IEnumerable<PersianPortal.Models.File>

@{
    ViewBag.Title = "مدیریت فایل ها";
}

<h2>لیست فایل ها</h2>

<div class="btn btn-default col-lg-1 col-lg-offset-4" style="color:black;text-decoration:none;margin-top:3%;margin-bottom:3%">
    @Html.ActionLink("ایجاد فایل جدید", "Upload")
</div>
<table class="table col-lg-9">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Extension)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Extension)
        </td>
        <td>
            <a href="@item.URL">فایل</a>
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
