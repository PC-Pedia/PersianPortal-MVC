@model HttpPostedFileBase

@{
    ViewBag.Title = "Upload";
}

<h2>بارگذاری</h2>

<span style="color: red">@ViewBag.error</span>

@using (Html.BeginForm("Upload", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-lg-10">
        <h4>فایل</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2" for="file">فایل بارگذاری:</label>
            <div class="col-md-10">
                <input type="file" name="file" id="file" /><br><br>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input class="btn btn-default" type="submit" value="Upload Image" />
                </div>
            </div>
        </div>
    </div>
}

<div class="col-lg-2 col-lg-offset-10">
    @Html.ActionLink("<< بازگشت به لیست فایل ها >>", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
