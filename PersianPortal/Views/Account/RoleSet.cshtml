@model PersianPortal.Models.UserRoleViewModel
@{
    ViewBag.Title = "RoleSet";
}

<h2>تعیین سطح دسترسی کاربران</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-lg-10">
        <h4>کاربر</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.Label("کاربر", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.user, (SelectList)ViewBag.user)
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("دسترسی", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.role.Name, (SelectList)ViewBag.role)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-5">
                <input type="submit" value="ثبت" class="btn btn-success" />
            </div>
        </div>
    </div>
}
